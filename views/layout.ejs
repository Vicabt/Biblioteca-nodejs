<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title><%= typeof title !== 'undefined' ? title : 'Biblioteca CRUD' %></title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      .sidebar-custom {
        background: linear-gradient(180deg, #b3541e 0%, #e07a3f 100%);
        color: #fff;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 2rem;
        position: relative;
      }
      .sidebar-custom .nav-link {
        color: #fff !important;
        font-weight: 500;
        text-align: center;
        margin-bottom: 0.5rem;
      }
      .sidebar-custom .nav-link.active, .sidebar-custom .nav-link:hover {
        background: #fff2e0;
        color: #b3541e !important;
        border-radius: 0.5rem;
      }
      .sidebar-custom .sidebar-logo {
        margin-bottom: 2rem;
      }
      .sidebar-custom .sidebar-logo img {
        border: 2px solid #fff2e0;
      }
      .sidebar-custom .sidebar-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #fff;
        margin-bottom: 2rem;
        text-align: center;
      }
      .sidebar-custom .sidebar-footer {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        margin-top: 0;
        font-size: 0.9rem;
        color: #fff2e0;
        text-align: center;
        padding-bottom: 1rem;
      }
      .header-custom {
        background: #fff2e0;
        color: #b3541e;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 70px;
        border-bottom: 2px solid #e07a3f;
      }
      .header-custom .user-info {
        position: absolute;
        right: 2rem;
        display: flex;
        align-items: center;
      }
      .header-custom .user-info img {
        border: 2px solid #e07a3f;
      }
    </style>
</head>
<body>
<div class="container-fluid min-vh-100 d-flex flex-column p-0">
  <div class="row flex-grow-1 m-0">
    <!-- Sidebar -->
    <nav class="col-12 col-md-3 col-lg-2 d-md-block sidebar-custom sidebar shadow-sm p-0">
      <div class="sidebar-logo text-center">
        <img src="/images/biblioteca.jpg" alt="Logo" width="56" height="56" class="rounded-circle" style="object-fit:cover;">
      </div>
      <div class="sidebar-title"><%= typeof appName !== 'undefined' ? appName : 'Biblioteca CRUD' %></div>
      <ul class="nav flex-column w-100 align-items-center">
        <li class="nav-item w-100"><a class="nav-link" href="/dashboard"><i class="fa fa-home me-2"></i>Dashboard</a></li>
        <li class="nav-item w-100"><a class="nav-link" href="/authors"><i class="fa fa-user me-2"></i>Autores</a></li>
        <li class="nav-item w-100"><a class="nav-link" href="/publishers"><i class="fa fa-building me-2"></i>Editoriales</a></li>
        <li class="nav-item w-100"><a class="nav-link" href="/categories"><i class="fa fa-tags me-2"></i>Categorías</a></li>
        <li class="nav-item w-100"><a class="nav-link" href="/books"><i class="fa fa-book me-2"></i>Libros</a></li>
      </ul>
      <div class="sidebar-footer">
        Copyright © <%= new Date().getFullYear() %> Vicab66. Versión 1.0
      </div>
    </nav>
    <!-- Main content -->
    <div class="col p-0 d-flex flex-column" style="min-height:100vh;">
      <!-- Header -->
      <header class="header-custom position-relative py-3 px-4">
        <span class="fs-4 fw-bold w-100"><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Panel de Control' %></span>
        <div class="user-info d-flex align-items-center">
          <% if (typeof userImagePath !== 'undefined' && userImagePath) { %>
            <img src="<%= userImagePath %>" alt="Usuario" width="32" height="32" class="rounded-circle me-2" style="object-fit:cover;">
          <% } else { %>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-bounding-box rounded-circle me-2" viewBox="0 0 16 16"> 
              <path d="M1.5 1a.5.5 0 0 0-.5.5v3a.5.5 0 0 1-1 0v-3A1.5 1.5 0 0 1 1.5 0h3a.5.5 0 0 1 0 1zM11 .5a.5.5 0 0 1 .5-.5h3A1.5 1.5 0 0 1 16 1.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 1-.5-.5M.5 11a.5.5 0 0 1 .5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 1 0 1h-3A1.5 1.5 0 0 1 0 14.5v-3a.5.5 0 0 1 .5-.5m15 0a.5.5 0 0 1 .5.5v3a1.5 1.5 0 0 1-1.5 1.5h-3a.5.5 0 0 1 0-1h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 1 .5-.5"/>
              <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm8-9a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
            </svg>
          <% } %>
          <span class="fw-semibold"><%= typeof userName !== 'undefined' ? userName : 'Usuario' %></span>
        </div>
      </header>
      <!-- Contenido principal -->
      <main class="flex-grow-1 p-4">
        <%- body %>
      </main>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
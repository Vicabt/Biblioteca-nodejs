
<% if (messages.success) { %>
<div class="container mt-3">
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%- messages.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
<% } %>

<% if (messages.error) { %>
<div class="container mt-3">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%- messages.error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
<% } %>

<!-- Sección para el título de la Restauración y el botón de Volver -->
<div class="container mt-4 mb-5">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="text-white">
                <i class="fas fa-trash-restore me-2"></i>Restaurar Libros
            </h1>
            <p class="text-white-50">Listado de libros inactivos que pueden ser restaurados.</p>
        </div>
        <div class="col-auto">
            <a class="btn btn-outline-light btn-lg" href="/books/">
                <i class="fas fa-arrow-left me-1"></i> Volver a Libros
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-warning py-3">
            <h4 class="mb-0 text-white">Libros Inactivos</h4>
        </div>
        <div class="card-body">
            <% if(data && data.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">ISBN</th>
                            <th scope="col">Título</th>
                            <th scope="col">Autor</th>
                            <th scope="col">Editorial</th>
                            <th scope="col">Categoría</th>
                            <th scope="col">Año</th>
                            <th scope="col" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= (i+1) + ((page-1)*10) %></th>
                            <td><%= data[i].isbn %></td>
                            <td><%= data[i].name %></td>
                            <td><%= data[i].author_name %></td>
                            <td><%= data[i].publisher_name %></td>
                            <td><%= data[i].category_name %></td>
                            <td><%= data[i].year_published %></td>
                            <td class="text-end">
                                <form action="/books/activate/<%= data[i].id_book %>" method="POST" class="d-inline state-toggle-form">
                                    <input type="hidden" name="currentPage" value="<%= page %>">
                                    <button type="submit" 
                                        class="btn btn-sm btn-outline-success"
                                        title="Activar Libro">
                                        <i class="fas fa-check-circle"></i>
                                        <span class="d-none d-md-inline ms-1">Activar</span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                    <p class="lead text-muted">No hay libros inactivos para restaurar.</p>
                    <a href="/books/" class="btn btn-primary mt-2">
                        <i class="fas fa-arrow-left me-1"></i> Volver a Libros
                    </a>
                </div>
            <% } %>
        </div>
    </div>
    <!-- Controles de paginación -->
    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
    <nav aria-label="Paginación de libros inactivos">
      <ul class="pagination justify-content-center mt-3">
        <% if (page > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= page-1 %>" aria-label="Anterior">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Anterior</span>
            </a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link" aria-label="Anterior">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Anterior</span>
            </span>
          </li>
        <% } %>
        
        <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === page ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
        
        <% if (page < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= page+1 %>" aria-label="Siguiente">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Siguiente</span>
            </a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link" aria-label="Siguiente">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Siguiente</span>
            </span>
          </li>
        <% } %>
      </ul>
    </nav>
    <% } %>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Restaurar la posición del scroll si existe
        const scrollPosition = sessionStorage.getItem('scrollPosition');
        if (scrollPosition) {
            window.scrollTo(0, parseInt(scrollPosition));
            sessionStorage.removeItem('scrollPosition');
        }
        
        // Añadir event listeners a todos los formularios de toggle state
        const toggleForms = document.querySelectorAll('.state-toggle-form');
        
        toggleForms.forEach(form => {
            form.addEventListener('submit', function() {
                // Guardar la posición actual del scroll antes de enviar el formulario
                const currentScrollPos = window.pageYOffset;
                sessionStorage.setItem('scrollPosition', currentScrollPos);
                return true; // Permitir que el formulario se envíe normalmente
            });
        });
    });
</script>
